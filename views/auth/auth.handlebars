<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../css/ecommerce.css" />

    <link rel="stylesheet" href="../css/style.css" />
    <title>marketSpace | Authentication</title>
</head>

<body>
    <main class="u-flex index-main">
        {{> _navbar}}

        <section class="main-content section-auth">
            <div class="box">
                <div class="box__register">

                    <form action="/auth/register" method="POST" class="form section-contact__form" id='register_form'>
                        <h3 class="u-heading--secondary u-margin-bottom--small">
                            {{> _alerts}}
                            <i class="icon-ecommerce-bag"></i> Register Your Shop
                        </h3>
                        <i class="icon-arrows-right"></i>

                        <div class="form__group">
                            <input class="form__input" type="text" placeholder="Shop Name" name="name" id="name"
                                required spellcheck="false" value="{{name}}" />
                        </div>
                        <div class="grid-2 form-grid grid-to-1">
                            <div class="form__group">
                                <input class="form__input" type="email" placeholder="Email" id="email" name="email"
                                    value="{{email}}" required />

                            </div>

                            <div class="form__group">
                                <input class="form__input" type="tel" placeholder="Phone" id="phone" name="phone"
                                    value="{{phone}}" required />
                            </div>
                        </div>

                        <div class="form__group">

                            <select class="form__select" id="category" name="category">
                                <option value="" selected disabled>
                                    Category
                                </option>
                                <option value="accessories">Accessories</option>
                                <option value="appliances">Appliances</option>
                                <option value="clothing">Clothing</option>
                                <option value="education">Education</option>
                                <option value="fashion">Fashion</option>
                                <option value="games">Games</option>
                                <option value="health">Health</option>
                                <option value="food">Food</option>
                                <option value="music">Music</option>
                                <option value="other">Other</option>
                            </select>
                        </div>

                        <div class="grid-2 grid-to-1">
                            <div class="form__group">
                                <input class="form__input" type="password" placeholder="Password" id="password"
                                    value="{{password}}" name="password" required />

                            </div>

                            <div class="form__group">
                                <input class="form__input" type="password" placeholder="Confirm Password"
                                    value="{{password2}}" name='password2' id="confirm_password" />

                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary btn--block u-margin-bottom--small">
                            <i class="icon-ecommerce-bag"></i> Register Shop
                        </button>
                        <p class="u-center-text">
                            Already have an account?
                            <a href="#login" id="show__login">Login</a>
                        </p>
                    </form>
                </div>
            </div>

            <!-- login -->
            <div class="box">
                <div class="box__login">
                    <form action="/auth/login" method="POST" class="form section-contact__form">
                        <h3 class="u-heading--secondary u-margin-bottom--small">
                            <i class="icon-ecommerce-bag"></i> Login To Your Shop
                        </h3>

                        <div class="form__group">
                            <input class="form__input" type="email" placeholder="Email" id="email" name="email"
                                required />
                            <label class="form__label" for="email">Email</label>
                        </div>

                        <div class="form__group">
                            <input class="form__input" type="password" placeholder="Password" id="password"
                                name="password" required />
                            <label class="form__label" for="password">Password</label>
                        </div>

                        <button type="submit" class="btn btn-primary btn--block u-margin-bottom--small">
                            <i class="icon-ecommerce-bag"></i> Login
                        </button>
                        <div class="u-center-text">
                            <a href="/auth/" id="show__register"> Don't have an account?</a>
                            <span style="font-size: 1.5rem;">Or</span> <a href="/auth/forgotPassword">Forgot
                                password</a>
                        </div>

                    </form>
                </div>
            </div>
        </section>
    </main>

    <script>

        const box = document.querySelector(".box");
        const box__login = document.querySelector(".box__login");
        const box__register = document.querySelector(".box__register");
        const show__login = document.querySelector("#show__login");
        const show__register = document.querySelector("#show__register");

        const renderView = function (placeholder, view) {
            return (placeholder.style.display = view);
        };

        renderView(box__login, "none");

        show__login.addEventListener("click", (e) => {
            e.preventDefault();
            renderView(box__login, "block");
            renderView(box__register, "none");
        });
        show__register.addEventListener("click", (e) => {
            e.preventDefault();
            renderView(box__login, "none");
            renderView(box__register, "block");
        });


    </script>
</body>

</html>