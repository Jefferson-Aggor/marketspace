{{#if success_msg}}
<div class="alert alert-success u-margin-bottom--small">
    <p>{{success_msg}}</p>
</div>
{{/if}}

{{#if error_msg}}
<div class="alert alert-danger u-margin-bottom--small">
    <p>{{error_msg}}</p>
</div>
{{/if}}


{{#if errors}}
    {{#each errors}}
<div class="alert alert-danger u-margin-bottom--small">
    <p>{{msg}}</p>
</div>
{{/each}}

{{/if}}


<script>
    const alerts = document.querySelectorAll('.alert')

    alerts.forEach(alert => {
        setTimeout(() => {
            alert.style.display = 'none';

        }, 8000)
    })
</script>