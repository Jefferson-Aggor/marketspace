<footer class="footer">
    <div class="footer-logo">
        <h2>{{#if loggedIn}} {{loggedIn.name}} {{else}} {{shop.name}}{{/if}}</h2>
        <p>{{#if loggedIn}} {{loggedIn.mainText_sub_1}} {{else}} {{shop.mainText_sub_1}} {{/if}}</p>
    </div>
    <div class="footer-icons">
        <p><a {{#if loggedIn}} href="{{loggedIn.facebook}}" {{else}} href="{{shop.facebook}}" {{/if}}>Facebook</a></p>
        <p><a {{#if loggedIn}} href="{{loggedIn.twitter}}" {{else}} href="{{shop.twitter}}" {{/if}}>Twitter</a></p>
        <p><a {{#if loggedIn}} href="{{loggedIn.instagram}}" {{else}} href="{{shop.instagram}}" {{/if}}>Instagram</a>
        </p>
    </div>
</footer>